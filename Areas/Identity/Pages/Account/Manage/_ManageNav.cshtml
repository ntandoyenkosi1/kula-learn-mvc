@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class="w-100 btn btn-lg btn-info @ManageNavPages.IndexNavClass(ViewContext)" id="profile"
            asp-page="./Index">Profile</a></li>
    <li class="nav-item"><a class="w-100 btn btn-lg btn-info @ManageNavPages.EmailNavClass(ViewContext)" id="email"
            asp-page="./Email">Email</a></li>
    <li class="nav-item"><a class="w-100 btn btn-lg btn-info @ManageNavPages.ChangePasswordNavClass(ViewContext)"
            id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a id="external-login"
            class="w-100 btn btn-lg btn-info @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External
                logins</a></li>
    }
    <li class="nav-item"><a class="w-100 btn btn-lg btn-info @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"
            id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="nav-item"><a class="w-100 btn btn-lg btn-info @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data"
            asp-page="./PersonalData">Personal data</a></li>
</ul>
